#!/usr/bin/env php
<?php declare(strict_types=1);

require_once __DIR__ . '/../vendor/autoload.php';

use JanMikes\Slowpoker\FindSlowCommitCommand;
use JanMikes\Slowpoker\TestTimeCommand;
use Symfony\Component\Config\FileLocator;
use Symfony\Component\Console\Application;
use Symfony\Component\DependencyInjection\ContainerBuilder;
use Symfony\Component\DependencyInjection\Loader\YamlFileLoader;

$containerBuilder = new ContainerBuilder();

$loader = new YamlFileLoader($containerBuilder, new FileLocator());
$loader->load(__DIR__ . '/../config/services.yaml');

$containerBuilder->compile();

$application = new Application('Slowpoker', '0.1');

$application->add($containerBuilder->get(TestTimeCommand::class));
$application->add($containerBuilder->get(FindSlowCommitCommand::class));

$application->run();
